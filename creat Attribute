<body>
    <button onclick="myFunc()">Click to pic</button>
    <img>
</body>
<script>
    function myFunc() {
   var picture = document.querySelector("img");
   var ad = document.createAttribute("src");
   ad.value = "imagesrh.jpg";
   picture.setAttributeNode(ad);
}
</script>
</html>
